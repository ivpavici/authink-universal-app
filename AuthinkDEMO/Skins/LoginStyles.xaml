<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="LoginViewTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BasicAppTextStyle}">
        <Setter Property="FontSize" Value="35" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="LoginViewTextBoxStyle" TargetType="TextBox" >
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="27"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <Style x:Key="LoginViewPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="27"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <Style x:Key="LoginViewHyperlinkButtonStyle" TargetType="HyperlinkButton" >
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>
    
    <Style x:Key="LoginViewButtonStyle" TargetType="Button" BasedOn="{StaticResource BasicAppButtonStyle}">
        <Setter Property="Padding" Value="85, 0, 85, 0" />
    </Style>

</ResourceDictionary>
