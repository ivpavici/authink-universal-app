<Application
    x:Class="AuthinkDEMO.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ignore="http://www.ignore.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p2="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AuthinkDEMO.ViewModel"
    p2:Ignorable="d ignore">
    <Application.Resources>
        <ResourceDictionary>
            <!--  Global View Model Locator  -->
            <vm:ViewModelLocator
                xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:p8="http://schemas.microsoft.com/expression/blend/2008"
                p7:Key="Locator"
                p8:IsDataSource="True" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/GlobalStyles.xaml" />
                <ResourceDictionary Source="Themes/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>